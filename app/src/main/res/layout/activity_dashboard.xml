<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".DashboardActivity"
   >

    <!-- App Bar -->
    <RelativeLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#77dd77">

        <!-- App Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="3dp"
            android:text="Dashboard"
            android:textSize="18sp" />

    </RelativeLayout>

    <!-- Row: App Logo and Welcome Text -->
    <RelativeLayout
        android:id="@+id/logoRow"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/appBar"
        android:background="#77dd77"
        android:layout_marginTop="32dp"
        android:padding="16dp">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/app_logo" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@id/logo"
            android:text="Hi, Welcome"
            android:textSize="16sp" />

    </RelativeLayout>

    <!-- Grid View: Buttons -->
    <GridLayout
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoRow"
        android:columnCount="2"
        android:rowCount="2">

        <!-- Profile Button -->
        <Button
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="16dp"
            android:background="@drawable/dashboard_button_background"
            android:text="Profile" />

        <!-- Card Button -->
        <Button
            android:id="@+id/cardButton"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="16dp"
            android:background="@drawable/dashboard_button_background"
            android:text="Card" />

        <!-- Delivery Button -->
        <Button
            android:id="@+id/deliveryButton"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="16dp"
            android:background="@drawable/dashboard_button_background"
            android:text="Delivery" />

        <!-- Payment Button -->
        <Button
            android:id="@+id/paymentButton"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="16dp"
            android:background="@drawable/dashboard_button_background"
            android:text="Payment" />

    </GridLayout>
    <TextView
        android:id="@+id/textSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridView"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:text="@string/app_descriptiion" />
</RelativeLayout>